body
    font-family: 'Work Sans', sans-serif;

rotate-div()
    -ms-transform: arguments;
    -webkit-transform: arguments;
    transform: arguments;

.left
    rotate-div: (10deg)
    text-align left
    padding-left 10%

.right
    rotate-div: (-10deg)
    text-align right
    padding-right 10%

.impact--0
    font-size 2.4em
    background red
    color yellow

.impact--1
    font-size 2em
    background black
    color yellow

.weird--0
    font-style italic
    color pink

.profili
    display block-inline

.profilo
    text-align center
    border 1px lightgrey solid
    float left
    width 200px
    margin 3px

.profiloNome
    font-size 1.4em
    font-weight 200
    border-bottom black

.profiloPolarizzazione
    width 200px

.profiloImmagine
    width 200px

